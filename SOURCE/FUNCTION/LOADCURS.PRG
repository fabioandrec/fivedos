function cLoadCursor( cCursorFile )

    local aDefs := { "", "", "", "", "", "" }
    local n, n2, cImage, cDefBytes

    if file( cCursorFile )
        cImage = MemoRead( cCursorFile )
    else
        return ""
    endif

    afill( aDefs, "" )

    for n = 1 to 32
        cDefBytes = MemoLine( cImage,, n )
        for n2 = 1 to 3
            aDefs[ n2 + if( n > 16, 3, 0 ) ] += Chr( nBin2Dec( SubStr( cDefBytes, 1 + ( n2 - 1 ) * 8, 8 ) ) )
        next
    next

return aDefs[ 1 ] + aDefs[ 2 ] + aDefs[ 3 ] + ;
       aDefs[ 4 ] + aDefs[ 5 ] + aDefs[ 6 ] + ;
       chr( Val( MemoLine( cImage,, 33 ) ) ) + ;
       chr( Val( MemoLine( cImage,, 34 ) ) )


